#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_INIT(myandb)
AC_USE_SYSTEM_EXTENSIONS
AM_INIT_AUTOMAKE(myandb, 0.1) 
AC_CONFIG_SRCDIR([include/core.h])
AC_CONFIG_HEADERS([config.h])

# Checks for programs.
AC_PROG_CXX
AC_PROG_CC
AC_PROG_MAKE_SET

# Checks for libraries.

# Checks for header files.
AC_CHECK_HEADERS([arpa/inet.h fcntl.h limits.h netdb.h netinet/in.h sys/socket.h sys/time.h unistd.h])

# Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_STDBOOL
AC_TYPE_SIZE_T
AC_TYPE_SSIZE_T

# Checks for library functions.
AC_FUNC_ERROR_AT_LINE
AC_CHECK_FUNCS([gethostbyname gethostname gettimeofday localtime_r memset select socket strrchr])

AC_OUTPUT
